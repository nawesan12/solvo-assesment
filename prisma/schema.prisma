generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name String
  password String
  createdAt DateTime @db.Date @default(now())
  favorites String[] @default([])
}
